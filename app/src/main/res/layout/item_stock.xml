<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_gravity="">

    <CheckBox
        android:layout_marginEnd="5dp"
        android:id="@+id/check_box_to_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:minWidth="0dp"
        android:minHeight="0dp" />

    <TextView
        android:layout_marginEnd="35dp"
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/check_box_to_delete"
        android:layout_alignBottom="@+id/check_box_to_delete"
        android:layout_toEndOf="@+id/check_box_to_delete"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="KARTN" />

    <TextView
        android:layout_marginEnd="35dp"
        android:textStyle="bold"
        android:id="@+id/text_view_buy_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/check_box_to_delete"
        android:layout_alignBottom="@+id/check_box_to_delete"
        android:layout_toEndOf="@+id/text_view_name"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:text="33.22" />

    <TextView
        android:layout_marginEnd="15dp"
        android:textStyle="bold"
        android:id="@+id/text_view_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/check_box_to_delete"
        android:layout_alignBottom="@+id/check_box_to_delete"
        android:layout_toEndOf="@+id/text_view_buy_price"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:text="22.66" />

    <TextView
        android:id="@+id/text_view_profit"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/check_box_to_delete"
        android:layout_alignBottom="@+id/check_box_to_delete"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/black"
        tools:text="50" />

</RelativeLayout>